@model IEnumerable<Vitrunetics.PatientRegimen>

@{
    ViewBag.Title = "PatientRegimens";
}

<h2>PatientRegimens</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Patient.FName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Regimen.RegimenName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.FName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Regimen.RegimenName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PatientRegimenID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PatientRegimenID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PatientRegimenID })
        </td>
    </tr>
}

</table>
